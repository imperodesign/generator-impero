doctype html
html(lang='en')
  head
    include components/head
  body
    block nav
      include components/nav

    block content

    block footer
      include components/footer

    //- Load HMR JS & CSS if in dev, else just load bundled JS
    if process.env.NODE_ENV === 'development'
      script(src='/dev-assets/bundle.js')
    else
      script(src='/static/dist/bundle.js')
